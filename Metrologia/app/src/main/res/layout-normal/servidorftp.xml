<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_encuadrado">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Verificación de servidor FTP"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Servidor:"
        android:textSize="12dp"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <EditText
        android:id="@+id/txtServidorFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:inputType="text"
        android:textSize="12dp"
        tools:width="250dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView75"
        android:layout_alignStart="@+id/textView75"
        android:layout_below="@+id/textView75"
        android:layout_marginTop="54dp"
        android:text="Contraseña:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtServidorFTP"
        android:layout_alignStart="@+id/txtServidorFTP"
        android:layout_below="@+id/txtServidorFTP"
        android:layout_marginTop="16dp"
        android:text="Usuario:"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/txtUsuarioFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView75"
        android:layout_alignStart="@+id/textView75"
        android:layout_below="@+id/textView75"
        android:ems="10"
        android:inputType="text"
        android:textSize="12dp"
        tools:width="250dp" />

    <EditText
        android:id="@+id/txtContrasenaFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/textView13"
        android:ems="10"
        android:inputType="text"
        android:textSize="12dp"
        tools:width="250dp" />

    <Button
        android:id="@+id/btnConfirmarFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textSize="12dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textView76"
        android:layout_toRightOf="@+id/ibllave"
        android:layout_toEndOf="@+id/ibllave" />

    <ImageButton
        android:id="@+id/ibllave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/llave"
        android:layout_below="@+id/txtContrasenaFTP"
        android:layout_alignLeft="@+id/textView76"
        android:layout_alignStart="@+id/textView76"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <TextView
        android:id="@+id/textView76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar credenciales"
        android:layout_below="@+id/ibllave"
        android:layout_centerHorizontal="true" />
</RelativeLayout>