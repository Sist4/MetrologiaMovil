<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyAdiciona"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_encuadrado">

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adición de un nuevo Equipo para calibración:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Literal:"
        android:textSize="12dp"
        android:layout_above="@+id/txtDescr_adc"
        android:layout_alignLeft="@+id/textView72"
        android:layout_alignStart="@+id/textView72" />

    <TextView
        android:id="@+id/lblLiteral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        tools:text="literal"
        android:layout_below="@+id/spAdiciona"
        android:layout_alignLeft="@+id/txtDescr_adc"
        android:layout_alignStart="@+id/txtDescr_adc" />


    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/txtDescr_adc"
        android:layout_alignBottom="@+id/txtDescr_adc"
        android:layout_alignLeft="@+id/textView66"
        android:layout_alignStart="@+id/textView66" />

    <EditText
        android:id="@+id/txtDescr_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Descripción Equipo"
        android:inputType="text"
        android:textSize="12dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/lblLiteral"
        android:layout_alignRight="@+id/textView53"
        android:layout_alignEnd="@+id/textView53" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Div. Esc. visualización (d):"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/txtDivision_d_adc"
        android:layout_alignBottom="@+id/txtDivision_d_adc"
        android:layout_toLeftOf="@+id/txtDivision_d_adc"
        android:layout_toStartOf="@+id/txtDivision_d_adc" />

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Unidad:"
        android:textSize="12dp"
        android:layout_below="@+id/txtDivision_adc"
        android:layout_alignLeft="@+id/textView65"
        android:layout_alignStart="@+id/textView65" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Div. Esc. verificación (e):"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/txtDivision_adc"
        android:layout_alignBottom="@+id/txtDivision_adc"
        android:layout_alignLeft="@+id/textView70"
        android:layout_alignStart="@+id/textView70" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacidad de uso:"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/txtCapuso_adc"
        android:layout_alignBottom="@+id/txtCapuso_adc"
        android:layout_alignLeft="@+id/textView71"
        android:layout_alignStart="@+id/textView71" />

    <TextView
        android:id="@+id/textView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacidad Máxima:"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/txtCapmax_adc"
        android:layout_alignBottom="@+id/txtCapmax_adc"
        android:layout_alignLeft="@+id/textView69"
        android:layout_alignStart="@+id/textView69" />

    <TextView
        android:id="@+id/textView67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo:"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/txtMod_adc"
        android:layout_alignBottom="@+id/txtMod_adc"
        android:layout_alignLeft="@+id/textView68"
        android:layout_alignStart="@+id/textView68" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca:"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/txtMarca_adc"
        android:layout_alignBottom="@+id/txtMarca_adc"
        android:layout_alignLeft="@+id/textView67"
        android:layout_alignStart="@+id/textView67" />

    <EditText
        android:id="@+id/txtMarca_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDescr_adc"
        android:layout_alignStart="@+id/txtDescr_adc"
        android:layout_below="@+id/txtDescr_adc"
        android:ems="10"
        android:textSize="12dp"
        android:hint="Marca"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtMod_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Modelo"
        android:textSize="12dp"
        android:inputType="text"
        android:layout_below="@+id/txtMarca_adc"
        android:layout_alignLeft="@+id/txtMarca_adc"
        android:layout_alignStart="@+id/txtMarca_adc" />

    <EditText
        android:id="@+id/txtCapmax_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="12dp"
        android:hint="Capacidad Máxima"
        android:inputType="numberDecimal"
        android:layout_below="@+id/txtMod_adc"
        android:layout_alignLeft="@+id/txtMod_adc"
        android:layout_alignStart="@+id/txtMod_adc" />

    <EditText
        android:id="@+id/txtCapuso_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="12dp"
        android:hint="Capacidad de Uso"
        android:inputType="numberDecimal"
        android:layout_below="@+id/txtCapmax_adc"
        android:layout_alignLeft="@+id/txtCapmax_adc"
        android:layout_alignStart="@+id/txtCapmax_adc" />

    <EditText
        android:id="@+id/txtDivision_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="12dp"
        android:hint="Div. esc. Verificación  (e)"
        android:inputType="numberDecimal"
        android:layout_below="@+id/txtCapuso_adc"
        android:layout_alignLeft="@+id/txtCapuso_adc"
        android:layout_alignStart="@+id/txtCapuso_adc" />

    <EditText
        android:id="@+id/txtDivision_d_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Div. esc. Visualización (d)"
        android:inputType="numberDecimal"
        android:textSize="12dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup" />

    <Button
        android:id="@+id/btAdicion_adc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Equipo"
        android:textSize="12dp"
        android:layout_below="@+id/txtDivision_d_adc"
        android:layout_alignRight="@+id/txtDivision_d_adc"
        android:layout_alignEnd="@+id/txtDivision_d_adc"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Seleccione el proyecto:"
        android:textSize="12dp"
        android:layout_below="@+id/textView53"
        android:layout_alignLeft="@+id/textView53"
        android:layout_alignStart="@+id/textView53" />

    <Spinner
        android:id="@+id/spAdiciona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_alignTop="@+id/textView72"
        android:layout_alignLeft="@+id/textView62"
        android:layout_alignStart="@+id/textView62"
        android:layout_alignRight="@+id/textView53"
        android:layout_alignEnd="@+id/textView53" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtDivision_adc"
        android:layout_alignLeft="@+id/txtDivision_adc"
        android:layout_alignRight="@+id/txtDivision_adc"
        android:layout_alignStart="@+id/txtDivision_adc"
        android:layout_below="@+id/txtDivision_adc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_kg_adc"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDivision_adc"
            android:layout_toLeftOf="@+id/radioGroup"
            android:layout_toStartOf="@+id/radioGroup"
            android:checked="true"
            android:text="kg."
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rb_g_adc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btAdicion_adc"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:layout_weight="1"
            android:text="g."
            android:textSize="12dp" />

    </RadioGroup>

</RelativeLayout>