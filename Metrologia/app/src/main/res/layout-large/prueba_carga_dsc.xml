<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LyCargaDsc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/lblnro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/colorAccent"
        android:textSize="60dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ibGuardaLectura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/guardar"
        tools:style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_alignBottom="@+id/txtLecturaCrg"
        android:layout_alignRight="@+id/lblTituloNro"
        android:layout_alignEnd="@+id/lblTituloNro" />

    <ImageButton
        android:id="@+id/ibSelecCargaCrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mancuerna"
        tools:style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_alignTop="@+id/txtCargaCrg"
        android:layout_alignLeft="@+id/ibGuardaLectura"
        android:layout_alignStart="@+id/ibGuardaLectura" />

    <ImageButton
        android:id="@+id/ibAdicionarLectura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/mas"
        tools:style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_below="@+id/txtLecturaCrg"
        android:layout_toRightOf="@+id/lblnro"
        android:layout_toEndOf="@+id/lblnro"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Prueba de Carga"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/lblTituloNro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Lectura Descendente NÂ°: "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTituloNro"
        android:layout_marginTop="31dp"
        android:layout_toLeftOf="@+id/lblTituloNro"
        android:layout_toStartOf="@+id/lblTituloNro"
        android:text="Carga:" />

    <EditText
        android:id="@+id/txtCargaCrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView31"
        android:layout_alignBottom="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:width="80dp"
        android:ems="10"
        android:inputType="numberDecimal" />


    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/txtCargaCrg"
        android:layout_marginTop="22dp"
        android:text="Lectura:" />

    <EditText
        android:id="@+id/txtLecturaCrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView32"
        android:layout_alignBottom="@+id/textView32"
        android:layout_alignLeft="@+id/txtCargaCrg"
        android:layout_alignStart="@+id/txtCargaCrg"
        android:width="80dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btGuardarAsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblAdicionar"
        android:layout_toEndOf="@+id/textView29"
        android:layout_toRightOf="@+id/textView29"
        android:text="Concluir Lecturas Dsc" />

    <TextView
        android:id="@+id/lblAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar nueva lectura"
        android:layout_below="@+id/ibAdicionarLectura"
        android:layout_alignLeft="@+id/ibAdicionarLectura"
        android:layout_alignStart="@+id/ibAdicionarLectura" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblAdicionar"/>


    <GridView
        android:id="@+id/gvVistaAsc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView35"
        android:layout_marginTop="13dp"
        android:columnWidth="70dp"
        android:horizontalSpacing="2dp"
        android:numColumns="9"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"

        />

    <TextView
        android:id="@+id/lblFormula_Pcarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32"
        android:layout_alignTop="@+id/ibAdicionarLectura" />

    <TextView
        android:id="@+id/lblSatisfactorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignTop="@+id/btGuardarAsc"
        android:layout_toRightOf="@+id/lblFormula_Pcarga"
        android:layout_toEndOf="@+id/lblFormula_Pcarga" />

    <TextView
        android:id="@+id/lblEmpCrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView35"
        android:layout_toRightOf="@+id/lblSatisfactorio"
        android:layout_toEndOf="@+id/lblSatisfactorio" />

    <TextView
        android:id="@+id/lbUniCarga_crg_dsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCargaCrg"
        android:layout_alignBottom="@+id/txtCargaCrg"
        android:layout_toRightOf="@+id/txtCargaCrg"
        android:layout_toEndOf="@+id/txtCargaCrg" />

    <TextView
        android:id="@+id/lbUniLec_crg_dsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLecturaCrg"
        android:layout_alignBottom="@+id/txtLecturaCrg"
        android:layout_toRightOf="@+id/txtLecturaCrg"
        android:layout_toEndOf="@+id/txtLecturaCrg" />


</RelativeLayout>

