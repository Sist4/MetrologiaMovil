<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_encuadrado"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Verificación de servidor FTP"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:text="Servidor:"
        android:textSize="12dp"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp" />

    <EditText
        android:id="@+id/txtServidorFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="12dp"
        tools:width="250dp"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Contraseña:"
        android:textSize="12dp"
        android:layout_below="@+id/txtUsuarioFTP"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:id="@+id/textView75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="Usuario:"
        android:textSize="12dp"
        android:layout_below="@+id/txtServidorFTP"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <EditText
        android:id="@+id/txtUsuarioFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="12dp"
        tools:width="250dp"
        android:layout_alignBaseline="@+id/textView75"
        android:layout_alignBottom="@+id/textView75"
        android:layout_alignLeft="@+id/txtServidorFTP"
        android:layout_alignStart="@+id/txtServidorFTP" />

    <EditText
        android:id="@+id/txtContrasenaFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="12dp"
        tools:width="250dp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/txtUsuarioFTP"
        android:layout_alignStart="@+id/txtUsuarioFTP" />

    <Button
        android:id="@+id/btnConfirmarFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textSize="12dp"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/ibllave"
        android:layout_alignRight="@+id/txtContrasenaFTP"
        android:layout_alignEnd="@+id/txtContrasenaFTP" />

    <ImageButton
        android:id="@+id/ibllave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContrasenaFTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/llave" />

    <TextView
        android:id="@+id/textView76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar credenciales"
        android:layout_below="@+id/ibllave"
        android:layout_centerHorizontal="true" />
</RelativeLayout>